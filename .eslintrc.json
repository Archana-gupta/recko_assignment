{
  "extends": ["airbnb", "airbnb/hooks"],
  "env": {
    "browser": true,
    "jest": true
  },
  "plugins": ["jest"],
  "rules": {
    "max-len": [2, 1000],
    "react/jsx-filename-extension": [0],
    "jsx-a11y/no-noninteractive-element-interactions": [0],
    "jsx-a11y/click-events-have-key-events": [0],
    "react/jsx-props-no-spreading": [0]
  },
  "parser": "babel-eslint"
}
